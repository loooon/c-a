    @RequestMapping("/add")
    public String addUser(Model model)
    {
        model.addAttribute("siteResources", getAllSiteResources());
        return "/user_add";
    }

    @RequestMapping("/resource")
    public String addResource(Model model)
    {
        model.addAttribute("siteResources", getAllSiteResources());
